<!DOCTYPE html>
<html>
  <head>
    <%- include('../html_head', {title: title}) %>
    <%- include('../form_script') %>
  </head>
  <body>
    <div id="page">
      <div id="main">
        <%- include('../page_header', {title: title, subtitle: subtitle, menus:menus}) %>
        <div class="container-fluid">
          <% if (records && records.length > 0) { %>
          <table class="table table-hover table-striped table-bordered">
            <caption>Liste des livres</caption>
            <thead>
              <tr>
                <th>#</th>
                <th>ISBN</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Description</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i< records.length; i++) { %>
                <tr data-href="view?id=<%- records[i].id %>">
                  <td><a href="view?id=<%- records[i].id %>">#<%= records[i].id %></a></td>
                  <td><%= records[i].isbn13 %></td>
                  <td><%= records[i].title %></td>
                  <td><%= records[i].author %></td>
                  <td><%= records[i].description %></td>
                </tr>
              <% } // for %>
            </tbody>
          </table>
          <%
          } // if (records && records.length > 0)
          else
          {
            %><div class="text-info">Aucun livre dans l'inventaire.</div><%
          } // else if (records && records.length > 0)
          %>
        </div><!-- class="container" -->
      </div><!-- id="main" -->
    </div><!-- id="page" -->

    <%- include('../page_footer') %>
  </body>
</html>
